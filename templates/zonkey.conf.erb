LoadModule passenger_module <%= @gems_path %>/<%= @gui_ruby_version %>/gems/<%= @gui_passenger_version %>/buildout/apache2/mod_passenger.so
<IfModule mod_passenger.c>
  PassengerRoot <%= @gems_path %>/<%= @gui_ruby_version %>/gems/<%= @gui_passenger_version %>
  PassengerDefaultRuby /usr/bin/ruby
</IfModule>

ServerName <%= @ip %>
<VirtualHost *:80>
  DocumentRoot /var/www/zonkey/public
  ServerAlias <%= @ip %>
  ErrorLog <%= @apache_log %>/zonkey/error_log
  CustomLog '|/etc/zonkey/bin/http_logger' '%h %l %u %t %r %>s %b %{Referer}i %{User-agent}i'
  <Directory /var/www/zonkey/public>
    AllowOverride All
    Options -MultiViews
    RailsEnv production
  </Directory>
</VirtualHost>


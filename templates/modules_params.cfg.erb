#--- DB connection for modules that do not support db_default_url option
modparam("avpops|acc|presence", "db_url","mysql://<%= @db_user_user %>:<%= @db_user_pass %>@<%= @db_host %>/<%= @db_name %>") 

#--- Load Balancer probing ID
modparam("load_balancer", "probing_from", "sip:pinger@<%= @opensips_floating_ip %>")

#--- Presence server address
modparam("presence", "server_address", "sip:presence@<%= @opensips_floating_ip %>:5060")

#--- PUA USERLOC default domain
modparam("pua_usrloc", "default_domain", "<%= @opensips_base_domain %>")

#--- PUA dialoginfo module presence server address
modparam("pua_dialoginfo", "presence_server", "sip:pua_dialoginfo@<%= @opensips_floating_ip %>:5060")

#--- PUA BLA server address
modparam("pua_bla", "server_address", "sip:bla@<%= @opensips_floating_ip %>")

#--- PUA BLA domain name
modparam("pua_bla", "default_domain", "<%= @opensips_base_domain %>")

# RLS server address
modparam("rls", "server_address", "sip:rls@<%= @opensips_floating_ip %>:5060")

# NAT traversing Form SIP header for probing pings to keep NAT pinhole open
modparam("nathelper", "sipping_from", "sip:nathelper@<%= @opensips_base_domain %>")

# DROUTING From header for probing
modparam("drouting", "probing_from", "sip:pinger@<%= @opensips_base_domain %>")

# UNIX datagram MI socket 
modparam("mi_datagram", "socket_name", "udp:<%= @opensips_floating_ip %>:8000")

# UNIX datagram MI socket
modparam("mi_datagram", "socket_name", "udp:10.6.8.50:8000")
